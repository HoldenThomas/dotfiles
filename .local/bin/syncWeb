#!/bin/sh
i=$(dialog --stdout --menu "Choose option: " 0 0 0  1 "Pull websites" 2 "Push websites" 3 "Push git") || exit 1
clear

case $i in

	1)
		rsync -vrP --delete-after root@holdenthomas.xyz:/var/www/ ~/Documents/websites ;;
	2)
		rsync -vrP --exclude git --delete-after ~/Documents/websites/ root@holdenthomas.xyz:/var/www ;;
	3)
		rsync -vrP --delete-after ~/Documents/websites/git/ git@holdenthomas.xyz:/var/www/git ;;
esac
