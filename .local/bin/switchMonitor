#!/bin/sh

input="$(printf "TV\\nMonitors" | dmenu -i -p "Select which monitor: ")" || exit 1

case $input in
	"TV") xrandr --output HDMI-0 --auto --scale .35 --set TearFree on --output DisplayPort-1 --off --output DisplayPort-2 --off ;;
	"Monitors") xrandr --output DisplayPort-1 --auto --set TearFree on --output DisplayPort-2 --auto --left-of DisplayPort-1 --set TearFree on --output HDMI-0 --off

esac
