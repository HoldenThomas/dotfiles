#!/bin/sh

[ $# -eq 1 ] && input="$1" || input="$(printf "TV\\nMonitors" | dmenu -i -p "Select which monitor: ")" || exit 1;


case $input in
	"TV") xrandr --output HDMI-A-0 --primary --auto --scale .35 --set TearFree on --output DisplayPort-0 --off --output DisplayPort-1 --off --output DisplayPort-2 --off;;
	"Monitors") xrandr --output DisplayPort-0 --primary --auto --set TearFree on --output DisplayPort-1 --auto --left-of DisplayPort-0 --set TearFree on --output DisplayPort-2 --off --output HDMI-A-0 --off;;
esac
