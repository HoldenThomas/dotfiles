#!/bin/sh

i=$(dialog --stdout --menu "Choose opion" 0 0 0 1 "Mount phone" 2 "Sync music" 3 "Sync AMV" 4 "Sync photos" 5 "Unmount phone") || exit 1
clear

case $i in
	1)
		mkdir ~/phone
		aft-mtp-mount ~/phone ;;
	2)
		rsync -vrPO --no-perms --inplace --size-only --delete --exclude=.thumbnails --exclude=iTunes --exclude="YouTube Music"/"10 Hours" --exclude="YouTube Music"/Videos /run/media/holden/HDD8T/Sync/Music/ ~/phone/android/Music/ ;;
	3)
		rsync -vrPO --no-perms --inplace --size-only --delete /run/media/holden/HDD8T/Sync/Videos/AMV/ ~/phone/android/Videos/AMV/ ;;
	4)
		rsync -vrPO --no-perms --inplace --size-only --delete --exclude="iPod Photo Cache" /run/media/holden/HDD8T/Sync/Pictures/"Itunes Pictures"/ ~/phone/android/Pictures/"Itunes Pictures"/ ;;
	5)
		fusermount -u ~/phone
		rm -Rf ~/phone
esac
