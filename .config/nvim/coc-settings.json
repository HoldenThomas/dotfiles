{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "pairs.enableCharacters": ["{", "[", "{", "'", "\"", "`"],
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "javascript",
    "typescript",
    "json",
    "c"
  ]
}
